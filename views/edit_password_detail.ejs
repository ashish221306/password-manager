<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
   <%- include('partial/head')%>
    <!--ck deitor-->
    <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
  
  </head>
  <body>
    <!--nav-->
    <%- include('partial/nav')%>
    <!--nav end-->
    <div class="container-fluid">
        <h3 class="text-center">Edit Password details</h3>
      <div class="row">
          
        <div class="col-md-6 col-xs-auto col-sm-auto ml-auto mr-auto">
        <!--form-->
        <div class="row">
            <form class="col s12" method="POST" action="/password-detail/edit/<%=record._id%>">
                <input type="hidden" name="id" value="<%=record._id%>">
              <%if(success!=''){%>
                <p class="text-success text-center"><%=success%></p>
                <%}%>
              <div class="row">
                <div class="input-field  col s6">
                    <select name="password_category">
                        <option value="" disabled selected>Choose category</option>
                        <%if(records.length>0){
                          records.forEach(function(row){
                          %>
                        <option value="<%=row.password_category%>" <%if(row.password_category==record.password_category){%>selected<%}%> ><%=row.password_category%></option>
                       <% })}%>
                      </select>
                     </div>
              </div>
              <div class="row">
                <div class="input-field col s6">
                  <input type="text" id="projectname"   class="materialize-textarea" value="<%=record.project_name%>" name="project_name">
                    <label for="projectname">project name</label>
                </div>
             
            </div>
              <div class="row">
                  <div class="input-field col s6">
                    <textarea  id='editor' class="materialize-textarea" name="pass_details"><%=record.password_detail%></textarea>
                      
                  </div>
               
              </div>
              <div class="row">
                  <div class="col s6">
                      <input class="btn" type="submit" value="update password detail">
                  </div>
                  <div class="col s6">
                    <a href="/view-all-password">view all Password List</a>
                  </div>
              </div>
            </form>
            
          </div>
        <!--form end-->
        </div>
        </div>
      </div>
      
      <script src="javascripts/nav.js"></script>
      <script>
        CKEDITOR.replace('editor');
        $(document).ready(function(){
          $('select').formSelect();
        });    
        
        document.addEventListener("DOMContentLoaded", function(){
    $('.progress').delay(600).fadeOut('slow');
  });
        </script>
  </body>
</html>
