    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-xs-auto col-sm-auto ml-auto mr-auto">
         
          <%if(msg!=''){%>
            <p class="text-success text-center">
              <%=msg%>
            </p>
            <%}%>
           
        
         <div class="box">
          <img src="/images/user.svg" height="80px" width="80px">
            <form class="data" action="/signup" method="POST">
             <input type="text" required name="uname"  id="uname" placeholder="username"><br>
             <input type="email" required name="email"  id="email" placeholder="email"><br>
             <input type="password"  required name='password'  id="password" placeholder="password"><br>
             <input type="password"  required name='confpassword'  id="confpassword" placeholder="confirm password"><br>
                <button type="submit" class="login">signup</button><br>
              
            </form>
        </div>
        </div>
        </div>
      </div>
      <script src="javascripts/nav.js"></script>
